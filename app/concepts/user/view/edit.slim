.form-group.form-wrapper
  h1 Edit User
  div
    .img.mv-20.profile
        ==image
  =form_for model do |f|
    div
      =f.label :name, class:" col-form-label"
      =f.text_field :name, class:"form-control"
    div
      =f.label :email, class:" col-form-label"
      =f.text_field :email, class:"form-control"
    - if admin?
      div
        =f.label :role, "Role", class:" col-form-label"
        = f.select(:role, options_for_select([0,1]))
    div
      =f.label :phone, class:" col-form-label"
      =f.text_field :phone, class:"form-control"
    div
      =f.label :date_of_birth, class:" col-form-label"
      =f.date_field :dob, class:"form-control"
    div
      =f.label :address, class:" col-form-label"
      =f.text_area :address, class:"form-control"
    div
      =f.label :profile, class:" col-form-label"
      =f.file_field :profile, class:"form-control"
    .div
      =f.submit 'Done', class:"btn button1 mv-r-20"
      ==link_to 'Back', users_path, class:"btn button1 button2 mv-20"