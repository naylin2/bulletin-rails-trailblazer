<h1>Post Detail</h1>
	<form>
      	<div class="form-group row">
            <label class="col-sm-4 col-form-label">Title</label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.title  %></label>
            </div>
        </div>
      	<div class="form-group row">
            <label class="col-sm-4 col-form-label">Description</label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.description  %></label>
            </div>
        </div>
      	<div class="form-group row">
            <label class="col-sm-4 col-form-label">Status</label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.status == 1  ? 'Active' : 'Inactive' %></label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Posted at</label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.created_at.strftime('%Y/%m/%d') %></label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Posted User</label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.create_user_id %></label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Updated at</label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.updated_at.strftime('%Y/%m/%d') %></label>
            </div>
        </div><div class="form-group row">
            <label class="col-sm-4 col-form-label">Updated User</label>
            <div class="col-sm-8">
                <label class="col-sm-10 col-form-label"><%= @post.updated_user_id %></label>
            </div>
        </div>
    </form>
  
  <%= link_to 'Back', posts_path, class:"btn button1 button2 mv-20"%>